{
  "compilerOptions": {
    "esModuleInterop": true,
    "noImplicitAny": false,
    "module": "commonjs",
    "moduleResolution": "node",
    "pretty": true,
    "types": ["node", "jest"],
    "sourceMap": true,
    "target": "ES2020",
    "resolveJsonModule": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "allowJs": true,
    "baseUrl": "./src",
    "outDir": "./dist",
    "paths": {}
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
